<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_post"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_default_post"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>


            <TextView
                android:id="@+id/post_text"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/alegreya"
                android:gravity="center"
                android:text="Select Image"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>






    <androidx.cardview.widget.CardView

        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/alegreya_bold"
                android:text="Work Title"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/post_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya"
                android:hint="Title"
                android:textSize="15dp"
                android:textStyle="italic"
                app:backgroundTint="@color/home_color" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/post_Des"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/alegreya_bold"
                android:text="Work Description"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/post_Des_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya"
                android:hint="Description"
                android:textSize="15dp"
                android:textStyle="italic"
                app:backgroundTint="@color/home_color" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/post_price"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/alegreya_bold"
                android:text="Work Price"

                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/post_price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya"
                android:hint="Price"
                android:inputType="number"
                android:textSize="15dp"
                android:textStyle="italic"
                app:backgroundTint="@color/home_color" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>











        <LinearLayout
            android:layout_marginTop="15dp"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            >


            <Button
                android:id="@+id/post_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/detail_button"
                android:fontFamily="@font/alegreya_bold"
                android:gravity="center"
                android:text="Publier..."

                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>