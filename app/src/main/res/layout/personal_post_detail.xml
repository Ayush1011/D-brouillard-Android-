<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".util.update_post.MainActivity2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"

            tools:ignore="MissingConstraints" >



            <androidx.cardview.widget.CardView
                android:background="@drawable/detail_image_boders"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="8dp"

                android:elevation="10dp">
                <ImageView

                    android:id="@+id/detailimage"
                    android:src="@mipmap/ic_home_image"
                    android:layout_width="match_parent"
                    android:layout_height='300dp'
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    tools:ignore="MissingConstraints" />
            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/detail_image_boders"
                    app:cardCornerRadius="8dp"


                    android:elevation="10dp">


                    <ImageView

                        android:id="@+id/detailimage1"
                        android:layout_width="match_parent"
                        android:layout_height='match_parent'
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_home_image" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detail_acc_pos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:fontFamily="@font/alegreya_bold"

                        android:text="Posted By" />

                    <TextView
                        android:id="@+id/detail_name"
                        android:layout_width="142dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/alegreya"

                        android:text="Ayush"

                        android:textStyle="bold|italic" />
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_bold"
                android:text="Price"
                android:textColor="@color/home_color"
                android:textSize="20dp"

                android:textStyle="bold|italic" />


            <TextView
                android:id="@+id/mainactivity2textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya"
                android:text="aaa"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@+id/detailimage"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/alegreya"
                android:maxLines="4"
                android:text="aaa"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/detailimage"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />



            <LinearLayout
                android:layout_margin="15dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">



                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_height="wrap_content"
                    android:src="@drawable/share_icon"/>

                <Button

                    android:id="@+id/detail_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/detail_button"
                    android:fontFamily="@font/alegreya"
                    android:text="Accept"
                    android:textColor="#fff" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>